<div>
  <div class="banner">
    <%= image_tag 'christian-wiediger-8nXKXYdO-Wk-unsplash.jpg' %>
  </div>
  <div class="copy">
    <h1>Borrow your dream camera</h1>
    <h5>You can find your nearest camera</h5>
  </div>
  <% if !user_signed_in? %>
    <div class="signin">
      <%= link_to "Sign in", new_user_registration_path, class: "button--color", id: "signin__button" %>
